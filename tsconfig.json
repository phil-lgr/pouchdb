{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "declarations.d.ts",
    "declarations/*.d.ts",
    "packages/node_modules/pouchdb-adapter-http/src/promise-pool.js",
    "packages/node_modules/pouchdb-core/src/adapter.js",
    "packages/node_modules/pouchdb-utils/src/**.js",
    "tooling/**/*.js"
  ]
}
